<!-- Modal -->
<div class="modal fade" id="modal{{@index}}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="row-4"></div>
                <img src="{{check thumbnail}}" width="90%">
            <div class="col-8">
                <h4>{{title}}</h4>
                <hr>
                <div class="my-3">저자: {{authors}}</div>
                <div class="my-3">가격:{{format price}}</div>
                <div class="my-3">출판사: {{publisher}}</div>
                <div class="my-3">출판일자:{{datetime}}</div>
                <div class="my-3">ISBN{{isbn}}</div>
            </div>
        </div>
        <hr>
        <div>{{contents}}</div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>